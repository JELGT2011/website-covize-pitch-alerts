<p id="notice"><%= notice %></p>

<h1>Listing Pitch Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Host</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pitch_events.each do |pitch_event| %>
      <tr>
        <td><%= pitch_event.title %></td>
        <td><%= pitch_event.host %></td>
        <td><%= pitch_event.description %></td>
        <td><%= pitch_event.image %></td>
        <td><%= link_to 'Show', pitch_event %></td>
        <td><%= link_to 'Edit', edit_pitch_event_path(pitch_event) %></td>
        <td><%= link_to 'Destroy', pitch_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

