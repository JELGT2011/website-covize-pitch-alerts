<div class="panel panel-primary">

  <div class="panel-heading">
    <h1>Listing Pitch Events</h1>
  </div>
  <br/>

  <div class="container-fluid">
    <%= link_to new_pitch_event_path do %>
        <button class="btn btn-primary">New Pitch Event</button>
    <% end %>
  </div>
  <br/>

  <table class="table responsive no-wrap" id="pitch_events_table">
    <thead>
    <tr>
      <th>Event name</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Event start</th>
      <th>Event end</th>
    </tr>
    </thead>

    <tbody>
    <% @pitch_events.each do |pitch_event| %>
        <tr>
          <td><%= link_to pitch_event.event_name, pitch_event %></td>
          <td><%= pitch_event.address_1 %></td>
          <td><%= pitch_event.address_2 %></td>
          <td><%= pitch_event.city %></td>
          <td><%= pitch_event.state %></td>
          <td><%= pitch_event.zip %></td>
          <td><%= pitch_event.event_start %></td>
          <td><%= pitch_event.event_end %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>
